{
  "name": "code-realm-ts",
  "version": "0.1.0",
  "description": "Gamified CLI RPG for mastering algorithms and system design in TypeScript.",
  "main": "dist/main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node --transpile-only src/main.ts",
    "start": "node dist/main.js",
    "build": "tsc",
    "test": "jest",
    "test:ch1:ts": "ts-node quests/chapter1/typescript/check.ts",
    "test:ch1:js": "node quests/chapter1/javascript/check.js",
    "test:ch1:py": "python3 quests/chapter1/python/check.py",
    "test:ch2:ts": "ts-node quests/chapter2/typescript/check.ts",
    "test:ch2:js": "node quests/chapter2/javascript/check.js",
    "test:ch2:py": "python3 quests/chapter2/python/check.py",
    "test:ch3:ts": "ts-node quests/chapter3/typescript/check.ts",
    "test:ch3:js": "node quests/chapter3/javascript/check.js",
    "test:ch3:py": "python3 quests/chapter3/python/check.py",
    "test:ch4:ts": "ts-node quests/chapter4/typescript/check.ts",
    "test:ch4:js": "node quests/chapter4/javascript/check.js",
    "test:ch5:ts": "ts-node quests/chapter5/typescript/check.ts",
    "test:ch5:js": "node quests/chapter5/javascript/check.js",
    "test:ch5:py": "python3 quests/chapter5/python/check.py",
    "test:grader": "npm run test:ch1:ts",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "ts-node": "^10.9.1",
    "typescript": "^5.4.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@types/node": "^20.11.19"
  },
  "license": "MIT"
} 